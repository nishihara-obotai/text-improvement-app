{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/project/manage.py",
      "args": [
        "runserver"
      ],
      "django": true,
      "justMyCode": false,
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}/project",
      "env": {},
      "console": "integratedTerminal"
    },
    {
      "name": "Django: runserver (カスタムポート)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/project/manage.py",
